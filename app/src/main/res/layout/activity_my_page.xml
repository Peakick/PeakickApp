<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MyPage">

    <FrameLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/backToHome_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/MyPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:text="MyPage" />

    </FrameLayout>

    <GridLayout
        android:id="@+id/account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_weight="2">

        <TextView
            android:id="@+id/nickname"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="___님"
            />

        <TextView
            android:id="@+id/email"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="25dp"
            android:text="Peakick@naver.com"
            />

        <ImageButton
            android:id="@+id/profile_img_btn"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="2"
            android:layout_marginTop="60dp"
            android:src="@drawable/profile_img2_foreground"
            tools:ignore="SpeakableTextPresentCheck" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/sixButton1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        tools:context=".MyPage">

        <android.widget.Button
            android:id="@+id/alarm_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/sixbutton_square"
            android:textSize="20dp"
            android:text="알림" />

        <android.widget.Button
            android:id="@+id/notification_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/sixbutton_square"
            android:textSize="20dp"
            android:text="공지" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixButton2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        tools:context=".MyPage">

        <android.widget.Button
            android:id="@+id/FAQ_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/sixbutton_square"
            android:textSize="20dp"
            android:text="FAQ" />


        <android.widget.Button
            android:id="@+id/viewHistory_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/sixbutton_square"
            android:textSize="20dp"
            android:text="시청 기록" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixButton3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        tools:context=".MyPage">

        <android.widget.Button
            android:id="@+id/wishList_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/sixbutton_square"
            android:textSize="20dp"
            android:text="찜 목록" />

        <android.widget.Button
            android:id="@+id/more_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/sixbutton_square"
            android:textSize="20dp"
            android:text="..." />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Home_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_baseline_home_24"
            android:gravity="bottom"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/peakickChat_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="53dp"
            android:gravity="bottom|center"
            android:background="@drawable/ic_baseline_chat_bubble_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/myPage_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_baseline_person_24"
            android:gravity="bottom|right"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>


</LinearLayout>