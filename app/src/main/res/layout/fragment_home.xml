<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_background"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/Peakick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Peakick"
                    android:textSize="26dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/white_rectangle_background">


                    <androidx.appcompat.widget.SearchView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@null">


                    </androidx.appcompat.widget.SearchView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/top_ranking_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                android:text="박스오피스 순위"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/top_ranking_image01"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/top_ranking01" />

                    <ImageView
                        android:id="@+id/top_ranking_image02"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/top_ranking01" />

                    <ImageView
                        android:id="@+id/top_ranking_image03"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/top_ranking01" />

                    <ImageView
                        android:id="@+id/top_ranking_image04"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/top_ranking01" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/log_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                android:text="최근 시청 기록"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/log_image01"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />

                    <ImageView
                        android:id="@+id/log_image02"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />

                    <ImageView
                        android:id="@+id/log_image03"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />

                    <ImageView
                        android:id="@+id/log_image04"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/happy_ranking_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                android:text="행복 추천 순위"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/happy_ranking_image01"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />

                    <ImageView
                        android:id="@+id/happy_ranking_image02"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />

                    <ImageView
                        android:id="@+id/happy_ranking_image03"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />

                    <ImageView
                        android:id="@+id/happy_ranking_image04"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/sad_ranking_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                android:text="슬픔 추천 순위"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sad_ranking_image01"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />

                    <ImageView
                        android:id="@+id/sad_ranking_image02"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />

                    <ImageView
                        android:id="@+id/sad_ranking_image03"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />

                    <ImageView
                        android:id="@+id/sad_ranking_image04"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/happy_ranking01" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>